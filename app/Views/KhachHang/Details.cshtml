@model DKAC.Models.InfoModel.KhachHangInfo

@{
    ViewBag.Title = "Xem chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    label {
        margin-top: 8px;
        color: #435d7d;
        font-weight: 700;
    }

    .form-group {
        border: 2px solid #afc9e4;
        background: #eef6ff;
        padding: 20px;
    }

        .form-group .row {
            margin-top: 20px;
            margin-bottom: 20px;
        }
</style>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <i class="fa fa-align-left" style="font-size: 25px; margin-top: 6px;"></i>
                <div class="col-sm-6">
                    <h2>Chi tiết khách hàng</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <ol class="breadcrumb" style="margin-left: 15px;">
                <li style="margin-right: 10px"><a href="/"> <i class="fa fa-home"></i>Home</a></li>
                <li style="margin-right: 10px"><a href="/KhachHang"><i class="fa fa-list"></i>Danh sách</a></li>
                <li class="active">
                    <span>Chi tết khách hàng: @Model.ten_khach_hang</span>
                </li>
            </ol>
        </div>

        <form action="" method="post" id="edit">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.HiddenFor(m => m.id, new { @class = "form-control", @id = "Id" })
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Mã khách hàng: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.ma_khach_hang, new { @class = "form-control", @id = "ma_khach_hang", @maxlength = "50", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.ma_khach_hang)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Tên khách hàng: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.ten_khach_hang, new { @class = "form-control", @id = "ten_khach_hang", @maxlength = "500", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.ten_khach_hang)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Địa chỉ: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.dia_chi, new { @class = "form-control", @id = "dia_chi", @maxlength = "500", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.dia_chi)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Mã số thuế: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.ma_so_thue, new { @class = "form-control", @id = "ma_so_thue", @maxlength = "20", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.ma_so_thue)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Số điện thoại: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.dien_thoai, new { @class = "form-control", @id = "dien_thoai", @maxlength = "15", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.dien_thoai)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Fax: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.fax, new { @class = "form-control", @id = "fax", @maxlength = "15", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.fax)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Email: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @id = "email", @maxlength = "200", @type = "email", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.email)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Người đại diện: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.nguoi_dai_dien, new { @class = "form-control", @id = "nguoi_dai_dien", @maxlength = "50", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.nguoi_dai_dien)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <label>Chức vụ: </label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.chuc_vu, new { @class = "form-control", @id = "chuc_vu", @maxlength = "50", @disable = "true" })
                        <div style="margin-top: 10px; color: red; font-style: italic;" id="messageCode">
                            @Html.ValidationMessageFor(m => m.chuc_vu)
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col-md-12 col-md-offset-2 text-right">
                <a type="button" class="btn btn-success" href="/KhachHang" style="width: 10%">Trở về</a>
            </div>
        </div>
    </div>
</div>
<!--Js file-->
<!-- ~/assets/login/vendor JS-->
<script src="~/assets/login/vendor/select2/select2.min.js"></script>
<script src="~/assets/login/vendor/datepicker/moment.min.js"></script>
<script src="~/assets/login/vendor/datepicker/daterangepicker.js"></script>
<script src="~/assets/vendor/jquery/1.7.1/jquery.min.js"></script>
<script src="~/assets/login/vendor/datepicker/moment.min.js"></script>

